{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: gcc compila il file attivo",
            "command": "/usr/bin/gcc",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Attivit√† generata dal debugger."
        },
        {
            "type": "colcon",
            "command": "/usr/bin/colcon",
            "args": [
                "build"
            ],
            "problemMatcher": [
                "$colcon-helper-gcc",
                "$colcon-helper-msbuild",
                "$colcon-helper-msbuild-info"
            ],
            "group": "build",
            "label": "colcon: build",
            "options": {
                "cwd": "${workspaceFolder}/ros2"
            },
        }
    ],
    "version": "2.0.0"
}